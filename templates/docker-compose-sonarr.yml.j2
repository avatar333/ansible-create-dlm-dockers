---
version: "2.1"
services:
  sonarr:
    image: ghcr.io/linuxserver/sonarr
    container_name: sonarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Africa/Johannesburg
    volumes:
      - "{{ rootcfg }}/sonarr:/config"
      - "{{ mnt_root }}:/tv"
      - "{{ rootdnld }}/sabnzbd:/downloads"
    ports:
      - 8989:8989
    restart: unless-stopped
