---
version: "2.1"
services:
  sabnzbd:
    image: ghcr.io/linuxserver/sabnzbd
    container_name: sabnzbd
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Africa/Johannesburg
    volumes:
      - "{{ rootcfg }}/sabnzbd:/config"
      - "{{ rootdnld }}/sabnzbd:/downloads"
      - "{{rootdnld }}/sabnzbd/incomplete-downloads:/incomplete-downloads"
    ports:
      - 8080:8080
    restart: unless-stopped
