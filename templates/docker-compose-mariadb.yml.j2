---
version: "2.1"
services:
  mariadb:
    image: ghcr.io/linuxserver/mariadb
    container_name: mariadb
    environment:
      - PUID=1000
      - PGID=1000
      - MYSQL_ROOT_PASSWORD=~@b5c0nd1tuM!
      - TZ=Africa/Johannesburg
    volumes:
      - /{{ rootdata }}/mariadb:/config
    ports:
      - 3306:3306
    restart: unless-stopped
